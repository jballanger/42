NAME = ft_cat

FILES = ft_cat.c

all: $(NAME)

$(NAME):
	gcc -Wall -Wextra -Werror -o $(NAME) $(FILES)

clean:
	rm -f $(NAME)

fclean:
	rm -f $(NAME)

re: fclean all
